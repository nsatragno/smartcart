<%= form_with(model: promocion, local: true) do |form| %>
  <% if promocion.errors.any? %>
    <div id="error_explanation">
      <h2>No se pudo guardar la promoci√≥n</h2>

      <ul>
      <% promocion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :nombre %>
    <%= form.text_field :nombre, class: "form-control" %>
  </div>

  <% if promocion.imagen.present? %>
    <%= image_tag promocion.imagen.url, class: "imagen-producto" %>
  <% end %>
  <div class="form-group">
    <%= form.label :imagen %>
    <%= form.file_field :imagen %>
  </div>

  <div class="row m-t-md">
    <div class="col-md-2 col-md-offset-4">
      <%= link_to promociones_path, class: "btn btn-warning btn-block" do %>
        <i class="fa fa-arrow-left"></i> Volver
      <% end %>
    </div>
    <div class="col-md-2">
      <button class="btn btn-primary btn-block" type="submit">
        <i class="fa fa-save"></i> Guardar
      </button>
    </div>
  </div>
<% end %>
