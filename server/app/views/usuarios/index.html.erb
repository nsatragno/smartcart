<% content_for :title do %>Usuarios<% end %>

<div class="row">
  <div class="col-md-12">
     <div class="ibox">
      <div class="ibox-title">
        <h5>Listado de Usuarios</h5>
      </div>
      <div class="ibox-content">
        <table class="table table-hover">
          <thead>
            <tr>
              <th class="col-md-5">Nombre</th>
              <th class="col-md-5">Email</th>
              <th class="col-md-2" colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @usuarios.each do |usuario| %>
              <tr>
                <td><%= usuario.nombre %></td>
                <td><%= usuario.email %></td>
                <td>
                  <%= link_to edit_usuario_path(usuario), class: "btn btn-primary" do %>
                    <i class="fa fa-pencil"></i> Editar
                  <% end %>
                </td>
                <td>
                  <%= link_to usuario, class: "btn btn-danger", method: :delete, data: { confirm: 'Â¿Seguro?' } do %>
                    <i class="fa fa-trash"></i> Eliminar
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <div class="row m-t-md">
          <div class="col-md-2 col-md-offset-5">
            <%= link_to new_usuario_path, class: "btn btn-primary btn-block" do %>
              <i class="fa fa-plus"></i> Nuevo
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
