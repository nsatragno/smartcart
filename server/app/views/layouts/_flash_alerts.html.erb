<script>
  $(function () {
    toastr.options = {
      "closeButton": true,
      "debug": false,
      "progressBar": true,
      "preventDuplicates": false,
      "positionClass": "toast-top-right",
      "onclick": null,
      "showDuration": "400",
      "hideDuration": "1000",
      "timeOut": "7000",
      "extendedTimeOut": "1000",
      "showEasing": "swing",
      "hideEasing": "linear",
      "showMethod": "fadeIn",
      "hideMethod": "fadeOut"
    }
      <% if flash[:success] %>
        toastr.success("<%= escape_javascript flash[:success] %>");
      <% end %>
      <% if flash[:warning] %>
        toastr.warning("<%= escape_javascript flash[:warning] %>");
      <% end %>
      <% if flash[:error] %>
        toastr.error("<%= escape_javascript flash[:error] %>");
      <% end %>
  });
</script>
